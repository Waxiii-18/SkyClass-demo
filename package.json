{
  "name": "skyclass-demo",
  "version": "1.0.0",
  "description": "A lightweight educational platform for students with low-end devices",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "client": "cd client && npm start",
    "server": "cd server && npm run dev",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "setup": "node setup.js",
    "demo-setup": "node demo-setup.js",
    "seed": "node -e \"require('./server/utils/seedData').seedData()\"",
    "start": "cd server && npm start",
    "render-start": "cd server && npm start",
    "test": "cd client && npm test"
  },
  "keywords": [
    "education",
    "platform",
    "lightweight",
    "react",
    "nodejs",
    "firebase"
  ],
  "author": "SkyClass Team",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  }
}
